<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="06-create-ai-generations-table" author="system">
        <comment>Create ai_generations table for tracking AI content generation history</comment>

        <createTable tableName="ai_generations">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_ai_generations"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"
                            foreignKeyName="fk_ai_generations_user"
                            references="users(id)"
                            deleteCascade="true"/>
            </column>
            <column name="prompt" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="keywords" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="word_count" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="generated_content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="model" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="tokens_used" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="generation_time_ms" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="generation_status_enum">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="article_id" type="BIGINT">
                <constraints nullable="true"
                            foreignKeyName="fk_ai_generations_article"
                            references="articles(id)"
                            deleteCascade="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="ai_generations"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
