<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="08-create-lawyer-profile-table" author="system">
        <comment>Create lawyer_profile table (singleton - only 1 record allowed)</comment>

        <createTable tableName="lawyer_profile">
            <column name="id" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="pk_lawyer_profile"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="bio" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="specializations" type="TEXT[]">
                <constraints nullable="true"/>
            </column>
            <column name="photo_url" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="phone" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="office_address" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="google_maps_url" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="linkedin_url" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="bar_association_number" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- CHECK constraint to enforce singleton (only id=1 allowed) -->
        <sql>
            ALTER TABLE lawyer_profile ADD CONSTRAINT chk_singleton_id
            CHECK (id = 1);
        </sql>

        <rollback>
            <dropTable tableName="lawyer_profile"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
