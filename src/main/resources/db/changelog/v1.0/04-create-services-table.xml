<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="04-create-services-table" author="system">
        <comment>Create services table for legal services (civil/criminal law)</comment>

        <createTable tableName="services">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_services"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uq_services_slug"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="service_category_enum">
                <constraints nullable="false"/>
            </column>
            <column name="scope" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="process" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="faq" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="display_order" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>

            <!-- SEO Fields -->
            <column name="meta_title" type="VARCHAR(60)">
                <constraints nullable="true"/>
            </column>
            <column name="meta_description" type="VARCHAR(160)">
                <constraints nullable="true"/>
            </column>
            <column name="og_image_url" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="keywords" type="TEXT[]">
                <constraints nullable="true"/>
            </column>

            <!-- Full-text search vector -->
            <column name="search_vector" type="TSVECTOR">
                <constraints nullable="true"/>
            </column>

            <!-- Audit Trail -->
            <column name="created_by" type="UUID">
                <constraints nullable="false"
                            foreignKeyName="fk_services_created_by"
                            references="users(id)"
                            deleteCascade="false"/>
            </column>
            <column name="updated_by" type="UUID">
                <constraints nullable="false"
                            foreignKeyName="fk_services_updated_by"
                            references="users(id)"
                            deleteCascade="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>

            <!-- Soft Delete -->
            <column name="deleted_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="services"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
